<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Series - {% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container">
                <a class="navbar-brand" href="#">Serie</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    {% set route_name = app.request.get('_route') %}
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link {% if route_name == 'homepage' %}active{% endif %}" href="{{ path('homepage') }}">
                                Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if route_name starts with 'genre' %}active{% endif %}" href="{{ path('genre_index') }}">
                                Les genres
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if route_name starts with 'serie' %}active{% endif %}" href="{{ path('serie_index') }}">
                                Mes séries
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if route_name == 'contact' %}active{% endif %}" href="{{ path('contact') }}">
                                Contact
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <main class="container">
            {% block body %}{% endblock %}
        </main>
    </body>
</html>
